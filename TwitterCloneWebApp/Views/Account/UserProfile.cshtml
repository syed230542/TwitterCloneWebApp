@model TwitterCloneWebApp.DataAccess.Person

@{
    ViewBag.Title = "Profile";
}
<br />
<br />
<div class="col-md-2"></div>
<div class="col-md-8">
    <form class="form-horizontal">
        <fieldset class="scheduler-border">
            <legend class="scheduler-border">Profile</legend>
            <div class="form-group">
                @Html.Label("User Name", new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.DisplayFor(m => m.UserId, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Full Name", new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.DisplayFor(m => m.FullName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Email", new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.DisplayFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Active User?", new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.DisplayFor(m => m.active, new { @class = "form-control" })
                </div>
            </div>
            @if (!Model.Followings1.Any(x => x.FollowingId.Equals((string)Session["UserName"])))
            {
            <div class="form-group">
                <div class="col-md-4"></div>
                <div class="col-md-3 pull-left">
                    @Html.ActionLink("Follow User", "Follow", new { followUserId = Model.UserId }, new { @class = "form-control btn btn-primary" })
                </div>
            </div>
            }
        </fieldset>
    </form>
</div>
<div class="col-md-2"></div>
