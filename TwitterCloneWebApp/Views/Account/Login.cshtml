@using TwitterCloneWebApp.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<style>
    
</style>
<br />
<br />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8 text-center"><h3>Welcome to MyTwitterClone Application</h3></div>
    <div class="col-md-2"></div>
</div>
<br />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <fieldset class="scheduler-border">
                    <legend class="scheduler-border">Login</legend>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserId, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.UserId, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Log in" class="btn btn-default pull-right" />
                        </div>
                    </div>
                    <p>
                        New User?  @Html.ActionLink("Signup", "Register")
                    </p>
                    <p>
                        @ViewBag.Errors
                    </p>

                </fieldset>

            }
        </section>
    </div>
    <div class="col-md-2"></div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}